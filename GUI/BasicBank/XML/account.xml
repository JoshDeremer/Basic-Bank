<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gridbag SYSTEM "gridbag.dtd">

<!-- XML Document used to create my Do Something form. -->

<gridbag>
	<row>
		<cell gridx="0" gridy="0" fill="BOTH" weightx="100">
			<bean id="withdraw_button">
				<class>javax.swing.JButton</class>
				<property>
					<name>text</name>
					<value><string>Withdraw</string></value>
				</property>
			</bean>
		</cell>
		<cell gridx="1" gridy="0" fill="BOTH" weightx="100">
			<bean id="deposit_button">
				<class>javax.swing.JButton</class>
				<property>
					<name>text</name>
					<value><string>Interest</string></value>
				</property>
			</bean>
		</cell>
	</row>
	<row>
		<cell gridx="0" gridy="1" gridwidth="2" fill="HORIZONTAL" weightx="100">
			<bean id="value">
				<class>javax.swing.JTextArea</class>
				<property>
		          <name>border</name>
		          <value><bean>
		            <class>javax.swing.border.EtchedBorder</class>
		          </bean></value>
		        </property>
		    </bean>
		</cell>
	</row>
	<row>
		<cell anchor="EAST" gridx="0" gridy="2">
			<bean>
				<class>javax.swing.JLabel</class>
				<property>
					<name>text</name>
					<value><string>Current Balance</string></value>
				</property>
			</bean>
		</cell>
		<cell gridx="1" gridy="2" fill="HORIZONTAL" weightx="100">
			<bean id="balance">
				<class>javax.swing.JTextArea</class>
				<property>
		          <name>border</name>
		          <value><bean>
		            <class>javax.swing.border.EtchedBorder</class>
		          </bean></value>
		        </property>
		    </bean>
		</cell>
	</row>
</gridbag>